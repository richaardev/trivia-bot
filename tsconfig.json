{
  "compilerOptions": {
    // Module
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "types": ["node"],
    "lib": ["ESNext"],
    "target": "ES2022",
    "baseUrl": "./src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts", "drizzle.config.ts"],
  "exclude": ["node_modules"]
}
